<p id="notice"><%= notice %></p>
<div class="container">
  <div class="col-md-5">
    <% if !@product.image_url.blank? %>
      <%= image_tag @product.image_url, size: "400" %>
    <% end %>
  </div>
  <div class="col-md-7">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>
    <%= form_tag(controller: 'cart', action: 'add') do %>
      <%= label_tag :quantity %>
      <%= number_field_tag :quantity, 1, min: 1, step: 1 %>
      <%= submit_tag 'Add to cart', class: 'btn btn-info btn-md' %>
    <% end %>
    <%= link_to 'Back', products_path, class: 'btn btn-warning btn-sm' %>
  </div>
</div>
