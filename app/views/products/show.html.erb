<p id="notice"><%= notice %></p>

<%= image_tag @product.try(:image_url) %>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<%= form_tag(controller: 'cart', action: 'add') do %>
  <%= label_tag :quantity %>
  <%= number_field_tag :quantity, 1, min: 1, step: 1 %>
  <%= submit_tag 'Add to cart' %>
<% end %> |
<%= link_to 'Back', products_path %>
